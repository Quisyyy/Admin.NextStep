digraph DataFlowDiagram {
    rankdir=LR;
    bgcolor="white";
    pad=0.5;
    nodesep=0.8;
    ranksep=1.2;
    
    graph [fontname="Segoe UI", fontsize=14, labelloc="t", label="Data Flow Diagram - Alumni Management System"];
    node [fontname="Segoe UI", fontsize=11, style="filled"];
    edge [fontname="Segoe UI", fontsize=9, color="#4472C4", penwidth=2.5];
    
    /* External Entities */
    AdminUser [label="ðŸ‘¤ ADMIN USER\n(External Entity)", shape=ellipse, fillcolor="#FFD700", color="#FF8C00", penwidth=3];
    
    /* Processes */
    P1 [label="P1: Authentication\nModule", shape=box, fillcolor="#90EE90", color="#228B22", penwidth=2];
    P2 [label="P2: Bulk Upload\nProcessor", shape=box, fillcolor="#90EE90", color="#228B22", penwidth=2];
    P3 [label="P3: Career Status\nTracker", shape=box, fillcolor="#90EE90", color="#228B22", penwidth=2];
    P4 [label="P4: Audit Trail\nLogger", shape=box, fillcolor="#90EE90", color="#228B22", penwidth=2];
    P5 [label="P5: Employment\nStatus Manager", shape=box, fillcolor="#90EE90", color="#228B22", penwidth=2];
    
    /* Data Stores */
    D1 [label="D1: Alumni\nProfiles DB", shape=cylinder, fillcolor="#87CEEB", color="#0047AB", penwidth=2];
    D2 [label="D2: Career\nInfo DB", shape=cylinder, fillcolor="#87CEEB", color="#0047AB", penwidth=2];
    D3 [label="D3: Audit\nTrail DB", shape=cylinder, fillcolor="#87CEEB", color="#0047AB", penwidth=2];
    
    /* Data Flows */
    AdminUser -> P1 [label="Login Credentials"];
    P1 -> AdminUser [label="Auth Token"];
    AdminUser -> P2 [label="CSV File Upload"];
    P2 -> D1 [label="Insert Alumni Records"];
    P2 -> P4 [label="Upload Event"];
    P4 -> D3 [label="Store Audit Logs"];
    D1 -> P3 [label="Query Alumni Data"];
    P3 -> D2 [label="Store Career Status"];
    D1 -> P5 [label="Employment Data"];
    D2 -> P5 [label="Career Information"];
    P5 -> AdminUser [label="Status Reports"];
}
